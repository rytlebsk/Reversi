{
  "appId": "com.null.reversi",
  "productName": "Reversi",
  "copyright": "Copyright Â© 2025 null",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "package.json",
    "./out/**/*"
  ],
  "asar": true,
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "extraFiles": [
    {
      "from": ".env",
      "to": ".env"
    }
  ],
  "win": {
    "icon": "",
    "target": [
      "nsis",
      "portable"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": true,
    "artifactName": "${productName}-${version}-${os}-${arch}-Setup.${ext}"
  },
  "mac": {
    "icon": "",
    "category": "public.app-category.games",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "linux": {
    "icon": "",
    "category": "Network",
    "target": [
      "AppImage",
      "deb",
      "rpm",
      "zip"
    ]
  }
}
